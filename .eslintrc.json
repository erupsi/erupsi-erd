{
  "env": {
    "node": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "plugins": ["jest"],
      "env": {
        "jest/globals": true
      }
    }
  ]
}
